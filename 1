from flask import jsonify

@app.route('/status', methods=['GET'])
def system_status():
    return jsonify({
        "VitalsSync": "✅ /vitalsync",
        "StaffTime": "✅ /stafftime",
        "Spark History": "✅ /spark-history",
        "Milestone Feed": "✅ /milestone-feed (if active)",
        "Route Log": "📄 /static/route_status.log",
        "Bundle Archive": "📦 vitanet_bundle.zip",
        "Contributor Dashboard": "🧩 /me",
        "Translation Ready": "🌐 translations/en, nl, fr"
    })
